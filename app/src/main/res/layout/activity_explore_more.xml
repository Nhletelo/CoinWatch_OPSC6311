<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Explore Monthly Goals and Challenges"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to CoinWatch – your smart financial partner. CoinWatch is designed to help you track your income, monitor expenses, set monthly savings goals, and stay on top of your financial health. Our goal is to turn good money habits into a lifestyle."
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Monthly Goal Planning"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Each month, set achievable savings or investment goals using CoinWatch. Monitor your progress with real-time feedback and reports. You’ll receive personalized tips based on your spending behavior."
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Smart Money Tips"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Track every expense daily.\n• Create spending limits for non-essential items.\n• Review your transaction history weekly.\n• Save before you spend – pay yourself first.\n• Use challenges to make saving fun!"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔥 Interactive Challenges"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. No-Spend Weekend Challenge: Try not to spend any money over the weekend.\n\n2. Meal Prep Week: Save by cooking instead of buying takeout.\n\n3. Round-Up Challenge: Every time you spend, round up and save the difference.\n\n4. Savings Bingo: Complete financial tasks like 'skip coffee shop' or 'bike to work' to win badges.\n\nTrack your success inside the app and celebrate small wins!"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let CoinWatch motivate you to reach financial stability through small, consistent actions. Explore. Engage. Achieve."
            android:textSize="16sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="⬅️Back" />
    </LinearLayout>
</ScrollView>
